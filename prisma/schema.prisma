generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  
  // ðŸ‘‡ 1-to-1 relation
  cart      Cart?
}

model Cart {
  id         String   @id @default(uuid())
  products   String[] // ðŸ‘ˆ Array of product IDs
  userId     String   @unique // ðŸ‘ˆ each user can have only one cart
  user       User     @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
}
